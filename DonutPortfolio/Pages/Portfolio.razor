@page "/portfolio"


<div class="portfolio-container">
    <header class="portfolio-header">
        <h1>John Doe - Digital Artist & Developer</h1>
        <p>Welcome to my creative space where technology meets art.</p>
    </header>

    <main class="portfolio-main">
        <section id="shader-showcase" class="portfolio-section shader-section">
            <h2>Live Shader Showcase</h2>
            <p>A dynamic shader running on a 3D cube, rendered in real-time with WebGL.</p>
            <div id="webgl-container" class="webgl-canvas-container" @ref="webglCanvasContainer">
                <!-- The WebGL Canvas will be created here by JavaScript -->
            </div>
            <div class="shader-controls">
                <button class="btn-shader" @onclick="LoadDefaultShader">Default Shader</button>
                <button class="btn-shader" @onclick="LoadPsychedelicShader">Psychedelic Shader</button>
            </div>
        </section>

        <section id="gallery" class="portfolio-section">
            <h2>Project Gallery</h2>
            <p>A collection of my recent works, including images and video projects.</p>
            <div class="gallery-grid">
                <!-- Image Item -->
                <div class="gallery-item">
                    <img src="https://placehold.co/600x400/1e293b/ffffff?text=Project+Alpha" alt="Project Alpha Image">
                    <div class="gallery-item-info">
                        <h3>Project Alpha</h3>
                        <p>A 3D modeling and rendering project.</p>
                    </div>
                </div>
                <!-- Video Item -->
                <div class="gallery-item">
                    <video controls muted loop>
                        <!-- A royalty-free video for demonstration -->
                        <source src="https://assets.mixkit.co/videos/preview/mixkit-abstract-liquid-bubbles-9220-large.mp4" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                    <div class="gallery-item-info">
                        <h3>Abstract Animation</h3>
                        <p>An animated short created with custom tooling.</p>
                    </div>
                </div>
                <!-- Add more gallery items here -->
                 <div class="gallery-item">
                    <img src="https://placehold.co/600x400/4a5568/ffffff?text=Project+Beta" alt="Project Beta Image">
                    <div class="gallery-item-info">
                        <h3>Project Beta</h3>
                        <p>Concept art for a short film.</p>
                    </div>
                </div>
                 <div class="gallery-item">
                    <img src="https://placehold.co/600x400/2d3748/ffffff?text=Project+Gamma" alt="Project Gamma Image">
                    <div class="gallery-item-info">
                        <h3>Project Gamma</h3>
                        <p>Procedural environment generation.</p>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <footer class="portfolio-footer">
        <p>Contact me at: <a href="mailto:email@example.com">email@example.com</a></p>
    </footer>
</div>
